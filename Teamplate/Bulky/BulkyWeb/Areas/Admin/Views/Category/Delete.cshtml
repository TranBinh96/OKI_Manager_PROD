@model Category
<form method="post">
    <div class="border p-3 mt-4">
        <h2 class="text-primary">Delete Category</h2>
        <hr>
    </div>
    <input asp-for="CategoryId" hidden />
    <div class="mb-3">
        <label asp-for="Name" class="p-2"></label>
        <input asp-for="Name" type="text" class="form-control"/>
    </div>
    <div class="mb-3">
        <label asp-for="DisplayOrder" class="p-2"></label>
        <input asp-for="DisplayOrder" class="form-control" type="text"/>
    </div>
    
    <div class="row">
        <div class="col-6 col-md-3">
            <button type="submit" class="btn btn-outline-primary form-control">Delete</button>
        </div>
        <div class="col-6 col-md-3">
            <button class="btn btn-outline-secondary form-control"  asp-controller="Category" asp-action="Index">Back List</button>
        </div>
    </div>
</form>