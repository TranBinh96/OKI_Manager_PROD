@model Category
<form method="post">
    <input asp-for="CategoryId" hidden />
    <div class="border p-3 mt-4">
        <h2 class="text-primary">Update Category</h2>
        <hr>
    </div>
    <div class="mb-3">
        <label asp-for="Name" class="p-2"></label>
        <input asp-for="Name" type="text" class="form-control"/>
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="DisplayOrder" class="p-2"></label>
        <input asp-for="DisplayOrder" type="text" class="form-control"/>
        <span asp-validation-for="DisplayOrder" class="text-danger"></span>
    </div>
    <div class="row">
        <div class="col-3 col-md-3">
            <button type="submit" class="btn btn-outline-primary form-control">Update</button>
        </div>
        <div class="col-3 col-md-3">
            <button class="btn btn-outline-secondary form-control">Back List</button>
        </div>
    </div>


</form>