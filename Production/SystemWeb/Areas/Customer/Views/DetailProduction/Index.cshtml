                                            .HeaderFilter(f => f.Visible(true))
                                            .Grouping(g => g.AutoExpandAll(false))
                                            .ShowBorders(true)
                                            .FilterRow(filterRow => filterRow
                                            .Visible(true)
                                            .ApplyFilter(GridApplyFilterMode.Auto)
                                            )
                                            .SearchPanel(searchPanel => searchPanel
                                            .Visible(true)
                                            .Width(200)
                                            .Placeholder("Search  ...")
                                            )
                                            .HeaderFilter(headerFilter => headerFilter.Visible(true))
                                            .RemoteOperations(true)
                                            .Scrolling(s => s.Mode(GridScrollingMode.Virtual))
                                            .Height(650)
                                            .Summary(s => s.TotalItems(items =>
                                            {
                                                items.AddFor(m => m.NameTool)
                                                .SummaryType(SummaryType.Count);
                                            })
                                            )
                                            .Columns(columns =>
                                            {
                                                columns.AddFor(m => m.Id).Caption("STT").Width(80);
                                                columns.AddFor(m => m.NameTool).Caption("Tool Name");
                                                columns.AddFor(m => m.HourRun).Caption("Chạy").Width(120);
                                                columns.AddFor(m => m.Note).Caption("Ghi Chú");
                                                columns.AddFor(m => m.IP).Caption("Địa Chỉ IP");
                                                columns.AddFor(m => m.HostName).Caption("PC Name");                                                
                                                columns.AddFor(m => m.Station).Caption("Vị Trí");
                                                columns.AddFor(m => m.UnitName).Caption("Unit Name");
                                                columns.AddFor(m => m.LineName).Caption("Line Name");
                                                columns.AddFor(m => m.DateCreate).Caption("Ngày Tạo");
                                            })
                                            .DataSource(d => d.Mvc()
                                            .Controller("DetailTool")
                                            .LoadAction("Get")
                                            .Key("Id")
                                            )
                                            )

                                    </div>

