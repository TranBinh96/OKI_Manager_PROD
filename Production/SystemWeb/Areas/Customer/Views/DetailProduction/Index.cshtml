                        @* Thông tin IP *@
                        <div class="tab-content" id="myTabContent">
                            <div class="tab-pane fade show active tab_ip" id="inforip" role="tabpanel" aria-labelledby="inforip-tab">
                                <div class="card">
                                    <div class="card-body">
                                        @(
                                            Html.DevExtreme().DataGrid<DetailComputer>()
                                            .ID("gridDetailComputer")
                                            .ShowBorders(true)
                                            .WordWrapEnabled(true)
                                            .Paging(paging => paging.Enabled(false))
                                            .HeaderFilter(f => f.Visible(true))
                                            .Grouping(g => g.AutoExpandAll(false))
                                            .FilterRow(filterRow => filterRow
                                            .Visible(true)
                                            .ApplyFilter(GridApplyFilterMode.Auto)
                                            )
                                            .SearchPanel(searchPanel => searchPanel
                                            .Visible(true)
                                            .Width(200)
                                            .Placeholder("Search ...")
                                            )
                                            .RemoteOperations(true)
                                            .Scrolling(s => s.Mode(GridScrollingMode.Virtual))
                                            .Height(650)
                                            .Summary(s => s.TotalItems(items =>
                                            {
                                                items.AddFor(m => m.HostName)
                                                .SummaryType(SummaryType.Count);
                                            }))
                                            .Columns(columns =>
                                            {
                                                columns.AddFor(m => m.Id).Caption("STT").Width(80);
                                                columns.AddFor(m => m.CreateDate).Caption("Ngày Tạo");
                                                columns.AddFor(m => m.HostName).Caption("PC Name").Width(120);
                                                columns.AddFor(m => m.AddressIP).Caption("Địa Chỉ IP");
                                                columns.AddFor(m => m.TypePC).Caption("Kiểu");
                                                columns.AddFor(m => m.Station).Caption("Vị Trí");
                                                columns.AddFor(m => m.UnitName).Caption("Unit Name");
                                                columns.AddFor(m => m.LineName).Caption("Line Name");
                                                columns.AddFor(m => m.Note).Caption("Ghi Chú");
                                                columns.AddFor(m => m.PersonCharge).Caption("Phụ Trách");
                                                
                                            })
                                            .DataSource(d => d.Mvc()
                                            .Controller("DetailProduction")
                                            .LoadAction("Get")
                                            .Key("Id")                                            
                                            )
                                      
                                            )

                                   </div>                 

                               </div>

                                <div id="popup" style="display:none">
                                    @(Html.DevExtreme().Popup()
                                        .ID("detailPopup")
                                        .Width(500)
                                        .Height(300)
                                        .ShowTitle(true)
                                        .Title("Computer Details")
                                        .Visible(false)
                                        .ContentTemplate(@<text>
                                        <div> OK</div>
                                    </text>)
                                        )
                                </div>

                                
