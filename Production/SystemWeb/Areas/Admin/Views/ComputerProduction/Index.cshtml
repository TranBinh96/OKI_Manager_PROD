<div class="col-xl-12">
    <div class="card">
        <div class="card-body">
            <!-- Nav tabs -->
            <ul class="nav nav-tabs nav-tabs-custom nav-justified" role="tablist">
                <li class="nav-item">
                    <a class="nav-link active" data-bs-toggle="tab" href="#home1" role="tab">
                        <span class="d-block d-sm-none"><i class="fas fa-home"></i></span>
                        <span class="d-none d-sm-block">Computer</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" data-bs-toggle="tab" href="#profile1" role="tab">
                        <span class="d-block d-sm-none"><i class="far fa-user"></i></span>
                        <span class="d-none d-sm-block">Machine Delivery</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" data-bs-toggle="tab" href="#messages1" role="tab">
                        <span class="d-block d-sm-none"><i class="far fa-envelope"></i></span>
                        <span class="d-none d-sm-block">Information Program</span>
                    </a>
                </li>
                @* <li class="nav-item">
                    <a class="nav-link" data-bs-toggle="tab" href="#settings1" role="tab">
                        <span class="d-block d-sm-none"><i class="fas fa-cog"></i></span>
                        <span class="d-none d-sm-block">Settings</span>
                    </a>
                </li> *@
            </ul>

            <!-- Tab panes -->
            <div class="tab-content p-3 text-muted">
                <div class="tab-pane active" id="home1" role="tabpanel">
                    @(Html.DevExtreme().DataGrid<Computer_Production>()
                        .ID("gridContainer")
                        .ShowBorders(true)
                        .WordWrapEnabled(true)
                        .Paging(paging => paging.Enabled(false))
                        .HeaderFilter(f => f.Visible(true))
                        .Grouping(g => g.AutoExpandAll(false))
                        .ShowBorders(true)
                        .FilterRow(filterRow => filterRow
                        .Visible(true)
                        .ApplyFilter(GridApplyFilterMode.Auto)
                        )
                        .SearchPanel(searchPanel => searchPanel
                        .Visible(true)
                        .Width(200)
                        .Placeholder("Search  ...")
                        )
                        .HeaderFilter(headerFilter => headerFilter.Visible(true))
                        .RemoteOperations(true)
                        .Scrolling(s => s.Mode(GridScrollingMode.Virtual))
                        .Height(550)
                        .Summary(s => s.TotalItems(items =>
                        {
                            items.AddFor(m => m.HostName)
                            .SummaryType(SummaryType.Count);
                        })
                        )

                        .Editing(editing =>
                        {
                            editing.Mode(GridEditMode.Form);
                            editing.AllowUpdating(true);
                            editing.AllowAdding(true);
                            editing.AllowDeleting(true);
                        })
                        .Columns(columns =>
                        {
                            columns.AddFor(m => m.CreateDate).Caption("CreateDate");
                            columns.AddFor(m => m.HostName).Caption("HostName").Width(130);
                            columns.AddFor(m => m.IP).Caption("Address IP");
                            columns.AddFor(m => m.Type_Id).Caption("Tyle Line")
                            .Lookup(lookup => lookup
                            .DataSource(d => d.Mvc().Controller("TypeLine").LoadAction("GetAll").Key("Id"))
                            .DisplayExpr("Type_name")
                            .ValueExpr("Id")
                            );
                            columns.AddFor(m => m.Station).Caption("Station");
                            columns.AddFor(m => m.Unit_Id).Caption("Unit Name")
                            .Lookup(lookup => lookup
                            .DataSource(d => d.Mvc().Controller("Unit").LoadAction("GetAll").Key("Id"))
                            .DisplayExpr("unit_name")
                            .ValueExpr("Id")
                            );
                            columns.AddFor(m => m.Line_Id).Caption("Line Name")
                            .Lookup(lookup => lookup
                            .DataSource(d => d.Mvc().Controller("Line").LoadAction("GetAll").Key("Id"))
                            .DisplayExpr("line_name")
                            .ValueExpr("Id")
                            );
                            columns.AddFor(m => m.Note);
                            columns.AddFor(m => m.Running).Caption("Station Approve")
                            .Lookup(lookup => lookup
                            .DataSource(d => d.Mvc().Controller("ComputerProduction").LoadAction("GetStatus").Key("Id"))
                            .DisplayExpr("Status")
                            .ValueExpr("Id")
                            );

                        })
                        .DataSource(d => d.Mvc()
                        .Controller("ComputerProduction")
                        .LoadAction("Get")
                        .UpdateAction("Put")
                        .InsertAction("Post")
                        .DeleteAction("Delete")
                        .Key("Id")
                        )
                        )
                </div>
                <div class="tab-pane" id="profile1" role="tabpanel">
                    @(Html.DevExtreme().DataGrid<MachineDelivery>()
                        .ShowBorders(true)
                        .Paging(paging => paging.Enabled(false))
                        .HeaderFilter(f => f.Visible(true))
                        .Grouping(g => g.AutoExpandAll(false))
                        .ShowBorders(true)
                        .WordWrapEnabled(true)
                        .FilterRow(filterRow => filterRow
                        .Visible(true)
                        .ApplyFilter(GridApplyFilterMode.Auto)
                        )
                        .SearchPanel(searchPanel => searchPanel
                        .Visible(true)
                        .Width(200)
                        .Placeholder("Search  ...")
                        )
                        .HeaderFilter(headerFilter => headerFilter.Visible(true))
                        .RemoteOperations(true)
                        .Scrolling(s => s.Mode(GridScrollingMode.Virtual))
                        .Height(550)
                        .Summary(s => s.TotalItems(items =>
                        {
                            items.AddFor(m => m.IdComputer)
                            .SummaryType(SummaryType.Count);
                        })
                        )
                        .Editing(editing =>
                        {
                            editing.Mode(GridEditMode.Form);
                            editing.AllowUpdating(true);
                            editing.AllowAdding(true);
                            editing.AllowDeleting(true);
                        })
                        .Columns(columns =>
                        {
                            columns.AddFor(m => m.IdComputer).Caption("Computer Name")
                            .Lookup(lookup => lookup
                            .DataSource(d => d.Mvc().Controller("ComputerProduction").LoadAction("Get").Key("Id"))
                            .DisplayExpr("HostName")
                            .ValueExpr("Id")
                            );
                            columns.AddFor(m => m.IdPersonnel).Caption("Personnel")
                            .Lookup(lookup => lookup
                            .DataSource(d => d.Mvc().Controller("Personnel").LoadAction("Get").Key("Id"))
                            .DisplayExpr("FullName")
                            .ValueExpr("Id")
                            );
                            columns.AddFor(m => m.Note);
                            columns.AddFor(m => m.DateCreate).Caption("CreateDate");

                        })
                        .DataSource(d => d.Mvc()
                        .Controller("MachineDelivery")
                        .LoadAction("Get")
                        .UpdateAction("Put")
                        .InsertAction("Post")
                        .DeleteAction("Delete")
                        .Key("Id")
                        )
                        )
                </div>
                <div class="tab-pane" id="messages1" role="tabpanel">

                    <div class="modal fade bs-example-modal-xl" tabindex="-1" role="dialog" aria-labelledby="myExtraLargeModalLabel" aria-hidden="true">
                        <div class="modal-dialog modal-xl">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="myExtraLargeModalLabel">Information Software</h5>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                </div>

                                <div class="row justify-content-center" style="margin-top: 22px;">
                                    <div class="col-xl-2 custom-center">
                                        <div class="alert alert-info" role="alert">
                                            Size: <span id="Size">Loading...</span>
                                        </div>
                                    </div>
                                    <div class="col-xl-3 custom-center">
                                        <div class="alert alert-info" role="alert">
                                            Disk Use: <span id="DiskUse">Loading...</span>
                                        </div>
                                    </div>
                                    <div class="col-xl-4 custom-center">
                                        <div class="alert alert-info" role="alert">
                                            Remaining Disk Space Description: <span id="Description">Loading...</span>
                                        </div>
                                    </div>
                                </div>

                                <div class="modal-body">
                                    <table id="modal_table" class="table table-striped">
                                        <thead>
                                            <tr>
                                                <th>STT</th>
                                                <th>IP</th>
                                                <th>Name</th>
                                                <th>Publisher</th>
                                                <th>Version</th>
                                                <th>CreateTime</th>
                                                <th>UpdateTime</th>
                                            </tr>
                                        </thead>
                                    </table>
                                </div>
                            </div><!-- /.modal-content -->
                        </div><!-- /.modal-dialog -->
                    </div><!-- /.modal -->

                    <div class="col-12">
                        <div class="card">
                            <div class="card-body">
                                <table id="datatable-buttons" class="table table-striped table-bordered dt-responsive nowrap" style="border-collapse: collapse; border-spacing: 0;">
                                    <thead>
                                        <tr>
                                            <th>STT</th>
                                            <th>Ngày Tạo</th>
                                            <th>PC Name</th>
                                            <th>Địa Chỉ IP</th>
                                            <th>Kiểu</th>
                                            <th>Vị Trí</th>
                                            <th>Unit Name</th>
                                            <th>Line Name</th>
                                            <th>Ghi Chú</th>
                                        </tr>
                                    </thead>
                                </table>
                            </div> <!-- end card body-->
                        </div> <!-- end card -->
                    </div><!-- end col-->
                </div>
                <div class="tab-pane" id="settings1" role="tabpanel">
                   
                </div>
            </div>

        </div>
    </div>
</div>

                   

@section Scripts {
    <script src="~/js/computer.js"></script>
}

