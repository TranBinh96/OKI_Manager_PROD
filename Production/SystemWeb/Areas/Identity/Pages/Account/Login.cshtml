@page
@model LoginModel

<body class="auth-body-bg">
    <div class="bg-overlay"></div>
    <div class="wrapper-page">
        <div class="container-fluid p-0">
            <div class="card">
                <div class="card-body">

                    <div class="text-center mt-4">
                        <div class="mb-3">
                            <a href="index.html" class="auth-logo">
                                <img src="~/assets/images/oki-logo.png" height="30" class="logo-dark mx-auto" alt="">
                                <img src="~/assets/images/logo-light.png" height="30" class="logo-light mx-auto" alt="">
                            </a>
                        </div>
                    </div>

                    <h4 class="text-muted text-center font-size-18"><b>Sign In</b></h4>

                    <div class="p-3">

                        <form class="form-horizontal mt-3" id="account" method="post">                       
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group mb-3 row">
                                <div class="col-12">
                                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                                    <input asp-for="Input.Email" class="form-control" type="text" required="" placeholder="Username" autocomplete="username" aria-required="true">
                                </div>
                            </div>

                            <div class="form-group mb-3 row">
                                <div class="col-12">
                                    <input asp-for="Input.Password" class="form-control" type="password" required="" placeholder="Password" autocomplete="current-password" aria-required="true">
                                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="form-group mb-3 row">
                                <div class="col-12">
                                    <div class="custom-control custom-checkbox">
                                        <input type="checkbox" class="form-check-input" asp-for="Input.RememberMe" id="customCheck1">
                                        <label asp-for="Input.RememberMe" class="form-label ms-1" for="customCheck1"> @Html.DisplayNameFor(m => m.Input.RememberMe)</label>
        
                                    </div>
                                </div>
                            </div>

                            <div class="form-group mb-3 text-center row mt-3 pt-1">
                                <div class="col-12">
                                    <button id="login-submit" type="submit" class="btn btn-info w-100 waves-effect waves-light" type="submit">Log In</button>
                                </div>
                            </div>

                            <div class="form-group mb-0 row mt-2">
                                <div class="col-sm-7 mt-3">
                                    <a id="forgot-password" asp-page="./ForgotPassword" class="text-muted"><i class="mdi mdi-lock"></i> Forgot your password?</a>
                                </div>
                                <div class="col-sm-5 mt-3">
                                    <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="text-muted"><i class="mdi mdi-account-circle"></i> Create an account</a>
                                </div>
                                <div class="col-sm-5 mt-3">
                                    <a id="resend-confirmation" asp-page="./ResendEmailConfirmation" class="text-muted"><i class="mdi mdi-account-circle"></i> Create an account</a>
                                </div>
                            </div>
                        </form>
                    </div>
                    <!-- end -->
                </div>
                <!-- end cardbody -->
            </div>
            <!-- end card -->
        </div>
        <!-- end container -->
    </div>
</body>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
